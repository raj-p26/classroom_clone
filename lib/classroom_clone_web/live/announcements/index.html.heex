<section class="max-w-[1400px] mx-auto border border-outline/30 dark:border-outline-dark/30 rounded-lg p-4 my-2">
  <img src={@announcement.announcer_avatar} class="rounded-full" />
  <h1 class="text-2xl">{@announcement.content}</h1>

  <a :for={doc <- @docs} href={"/uploads/announcements/#{doc.file_path}"} target="_blank" download>
    {Path.basename(doc.file_path)}
  </a>
</section>
